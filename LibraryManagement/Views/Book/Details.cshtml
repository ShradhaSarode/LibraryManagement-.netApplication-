@model LibraryManagement.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div>
    <a href="@Url.Action("BookList", "Book")" class="btn btn-primary">Back to Book List</a>
</div>&nbsp;
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content(Model.CoverImage)" alt="@Model.Title" class="img-fluid custom-img-size">
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p><strong>Price:</strong> @Model.Price</p>
            <p class="card-text"><strong>Price:</strong> @Model.Price</p>
            <p><strong>Stock:</strong> @Model.Stock</p>
            <p class="card-text"><strong>PublishedYear:</strong> @Model.PublishedYear</p>
        </div>
    </div>
</div> &nbsp;&nbsp;
<form asp-controller="Cart" asp-action="AddToCart" method="post">
    <input type="hidden" name="BookID" value="@Model.BookID" />
    <button type="submit" class="btn btn-success">Add to Cart</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMsg))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMsg
    </div>
}

